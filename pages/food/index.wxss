
.camps {
        margin-top: 20rpx;
        width: 92%;
        height: auto;
}

.travel-notes {
        width: 100%;
        height: auto;
        background-color: #fff;
        padding: 0px;
        box-sizing: content-box;
        font-size: 20rpx;
        overflow: hidden;
        color: #000;
        display: inline-block;
        align-items: center;
        border-bottom: 1px solid #dedede;
}

.travel-img {
        width: 100%;
        height: auto;
        position: relative;
}
.main-img{
        width: 100%;
        height: auto;
}
.room-img{
        position: absolute;
        width: 77rpx;
        height: 77rpx;
        left: 10px;
        top: -2rpx;
      
}

.travel-title {
        width: auto;
        height: 60px;
        display: flex;
        flex-direction: row;
        align-items: center;
        justify-content:space-between;
}



.camp-text-left {
        width: auto;
        height: auto;
        display:flex;
        flex-direction: column;
          
}

.title{
        line-height: 50rpx;
        font-size: 30rpx;
        color:#484848;
        overflow:hidden; 
        text-overflow:ellipsis;   
        white-space:nowrap;   
}
.info{
        font-size: 22rpx;
        color:#484848;
        overflow:hidden; 
        text-overflow:ellipsis;   
        white-space:nowrap;   
}
.camp-text-right {
        width: 40px;
        height: 40px;
        line-height: 40px;
        flex: none;
        font-size: 26rpx;
        font-weight: bold;
        color: #3bae78
}